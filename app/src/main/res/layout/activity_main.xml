<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <Button
        android:id="@+id/main_BTN_startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start game"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/main_TXV_modeSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Please select GameMode:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_BTN_leaderBoard"
        tools:ignore="HardcodedText" />

    <RadioGroup
        android:id="@+id/main_RGP_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_TXV_modeSelect">

        <RadioButton
            android:id="@+id/main_RBT_slowSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slow"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/main_RBT_mediumSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/main_RBT_fastSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/main_RBT_sensorSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <Button
        android:id="@+id/main_BTN_leaderBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="leader board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_BTN_startGame"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>